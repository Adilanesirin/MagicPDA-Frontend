<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <domain-config cleartextTrafficPermitted="true">
        <!-- Local development -->
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">10.0.2.2</domain>
        
        <!-- Common local network ranges -->
        <domain includeSubdomains="true">192.168.1.1</domain>
        <domain includeSubdomains="true">192.168.1.2</domain>
        <domain includeSubdomains="true">192.168.1.3</domain>
        <domain includeSubdomains="true">192.168.1.4</domain>
        <domain includeSubdomains="true">192.168.1.5</domain>
        <domain includeSubdomains="true">192.168.1.6</domain>
        <domain includeSubdomains="true">192.168.1.7</domain>
        <domain includeSubdomains="true">192.168.1.8</domain>
        <domain includeSubdomains="true">192.168.1.9</domain>
        <domain includeSubdomains="true">192.168.1.10</domain>
        <!-- Add more specific IPs as needed -->
        
        <!-- For broader coverage, you can also add ranges -->
        <domain includeSubdomains="false">192.168.0.1</domain>
        <domain includeSubdomains="false">192.168.0.2</domain>
        <domain includeSubdomains="false">192.168.0.3</domain>
        <domain includeSubdomains="false">192.168.0.4</domain>
        <domain includeSubdomains="false">192.168.0.5</domain>
        <domain includeSubdomains="false">192.168.0.10</domain>
        <domain includeSubdomains="false">192.168.0.100</domain>
        <domain includeSubdomains="false">192.168.0.101</domain>
        <domain includeSubdomains="false">192.168.0.102</domain>
        <domain includeSubdomains="false">192.168.0.103</domain>
        <domain includeSubdomains="false">192.168.0.104</domain>
        <domain includeSubdomains="false">192.168.0.105</domain>
        
        <!-- 192.168.1.x range -->
        <domain includeSubdomains="false">192.168.1.100</domain>
        <domain includeSubdomains="false">192.168.1.101</domain>
        <domain includeSubdomains="false">192.168.1.102</domain>
        <domain includeSubdomains="false">192.168.1.103</domain>
        <domain includeSubdomains="false">192.168.1.104</domain>
        <domain includeSubdomains="false">192.168.1.105</domain>
        <domain includeSubdomains="false">192.168.1.150</domain>
        <domain includeSubdomains="false">192.168.1.200</domain>
    </domain-config>
    
    <!-- Allow all local network traffic -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
    </base-config>
</network-security-config>